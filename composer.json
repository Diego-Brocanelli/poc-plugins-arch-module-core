{
    "name": "bnw/poc-plugins-arch-module-core",
    "description": "Exemplo de m√≥dulo compartilhado para arquitetura de plugins",
    "type": "project",
    "keywords": [
        "bnw",
        "core",
        "laravel"
    ],
    "homepage": "https://github.com/bueno-networks-time/poc-plugins-arch-module-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Pereira",
            "email": "ricardo.pereira@buenonetworks.com.br",
            "homepage": "https://www.buenonetworks.com.br",
            "role": "Tech Lead"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "^7.0"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "laravel/laravel": "^7.0",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Module\\Core\\": "app-module/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "App\\Module\\Core\\Providers\\ServiceProvider"
            ],
            "aliases": {
                "Core": "App\\Module\\Core\\Providers\\CoreFacade"
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Module\\Core\\": "tests-module/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-autoload-dump": [
            "App\\Module\\Core\\Console\\ComposerScripts::preAutoloadDump"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    }
    
}
